<div class="topics-box container">
  <h2>Topics一覧</h2>
  <% @topics.each do |topic| %>
      <div class="col-md-8 col-md-offset-2 col-sm-10">
        <div class="topics-index-box">
          <div class="title-box">
            <div class="topic-title">
              <%= link_to topic_path(topic),class:"topic-link" do %><%= topic.title %><% end %>
            </div>
            <% if current_user.id == topic.user.id %>
              <div class="topic-btn">
                <%= link_to "編集", edit_topic_path(topic.id), class: 'btn btn-success btn-outline btn-sm btn-success' %>
                <%= link_to "削除", topic_path(topic.id), method: :delete, data:{ confirm: '本当に削除しますか？'}, class: 'btn btn-danger btn-outline btn-sm btn btn-danger' %>
              </div>
            <% end %>
          </div>
          <div class="topic-content">
            <%= topic.content %>
          </div>
       </div>
        <div class="user-profile-box">
          <div class="user-profile"><%= profile_img(topic.user) %> <%= topic.user.name %></div>
        </div>
      </div>
  <% end %>
</div>
